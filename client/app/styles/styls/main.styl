body
html
	background-color #f2f2f2
	font-family: 'Roboto', sans-serif
	height 100%
	overflow hiden

.bg-app
	min-height 200px
	width 100%
	background url('../images/bg-01.jpg') center top fixed no-repeat
	background-color #333
.ct-toolbar-main
	position relative
	width maxwidth
	display block
	margin-left auto
	margin-right auto

.ct-userinfo
.ct-toolbar-menu
.ct-content
	text-align left
	transition: all 500ms ease
	position relative
	width maxwidth
	margin-left auto
	margin-right auto
	display block
